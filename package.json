{
  "name": "chrono-lens",
  "version": "1.9.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "release": "semantic-release",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:preview": "npm run build && firebase hosting:channel:deploy preview",
    "hooks:setup": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'powershell -ExecutionPolicy Bypass -File .githooks/setup.ps1' : 'chmod +x .githooks/setup.sh && ./.githooks/setup.sh', {stdio: 'inherit'})\"",
    "hooks:install": "npm run hooks:setup",
    "validate:commit": "node -e \"const msg = process.argv[1]; const regex = /^(feat|fix|docs|style|refactor|perf|test|chore|build|ci|revert)(\\(.+\\))?: .{1,50}/; if (!regex.test(msg)) { console.error('❌ Invalid commit format'); process.exit(1); } else { console.log('✅ Valid commit format'); }\"",
    "postinstall": "npm run hooks:setup"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-switch": "^1.2.6",
    "firebase": "^12.1.0",
    "framer-motion": "^12.23.12",
    "heic2any": "^0.0.4",
    "lucide-react": "^0.541.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "semantic-release": "^24.2.7",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
